<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

  <persistence-unit name="obelixPU" transaction-type="RESOURCE_LOCAL">
    
    <!-- Suas entidades -->
    <class>com.obelix.pi.model.Usuario</class>
    <class>com.obelix.pi.model.Caminhao</class>
    <class>com.obelix.pi.model.PontoColeta</class>
    <class>com.obelix.pi.model.Itinerario</class>
    <class>com.obelix.pi.model.Rua</class>
    <class>com.obelix.pi.model.Bairro</class>
    <class>com.obelix.pi.model.Residuo</class>
    <class>com.obelix.pi.model.Rota</class>

    <properties>
      <!-- Configuração do banco -->
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/ObelixBank"/>
      <property name="jakarta.persistence.jdbc.user" value="postgres"/>
      <property name="jakarta.persistence.jdbc.password" value="aluno"/>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>

      <!-- Hibernate como provider -->
      <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

      <!-- Log de SQL (opcional) -->
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>

</persistence>
